<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gradeLayout"
    tools:context=".GradeFragment"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayoutGrades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:queryHint="Modul suchen"
                android:iconifiedByDefault="false"
                android:layout_marginBottom="20dp"
                android:id="@+id/searchBar"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noGrades"
                android:text="@string/rebootAppSeeGrades"
                android:fontFamily="@font/inte_medium"
                android:textColor="#fff" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scaleType="fitEnd"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/swipeleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SwipeLeft"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>